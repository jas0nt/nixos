{
  "position": "bottom",
  "layer": "top",
  "height": 16,
  "margin-top": 0,
  "margin-bottom": 0,
  "margin-left": 0,
  "margin-right": 0,
  "modules-left": [
    "custom/launcher",
    "hyprland/workspaces"
    //"wlr/taskbar"
  ],
  "modules-center": [
    "clock"
  ],
  "modules-right": [
    //"custom/playerctl",
    "custom/playerlabel",
    "pulseaudio",
    "tray",
    "group/hardware"
  ],
  "clock": {
    "format": "{:%H:%M  %a  %b %d}",
    "on-click": "hyprctl dispatch workspace e-1",
    "on-click-right": "hyprctl dispatch workspace e+1"
  },
  "hyprland/workspaces": {
    "active-only": false,
    "all-outputs": true,
    "disable-scroll": false,
    "show-special": true,
    "on-scroll-up": "hyprctl dispatch workspace -1",
    "on-scroll-down": "hyprctl dispatch workspace +1",
    "format": "{icon}",
    "on-click": "activate",
    "format-icons": {
      "1": "ÔÑ†",
      "2": "ÓùÖ",
      "3": "ÔÅº",
      "7": "Óò≤",
      "special": "Û∞∏≥",
      "urgent": "ÔÅ™",
      "active": "ÔÜí",
      "default": "Û∞ßû",
      "sort-by-number": true
    },
  },
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 16,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "ignore-list": [
       "Alacritty"
    ],
  },
  "custom/playerctl": {
    "format": "{icon}",
    "return-type": "json",
    "max-length": 64,
    "exec": "playerctl -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click": "playerctl play-pause",
    "format-icons": {
      "Playing": "<span foreground='#E5B9C6'>Û∞íÆ Û∞êå Û∞í≠</span>",
      "Paused": "<span foreground='#928374'>Û∞íÆ Û∞è• Û∞í≠</span>"
    },
  },
  "custom/playerlabel": {
    "format": "<span>ùÖ†   {}</span>",
    "return-type": "json",
    "max-length": 48,
    "exec": "playerctl -i firefox -a metadata --format '{\"text\": \"{{artist}} - {{markup_escape(title)}}\", \"tooltip\": \"{{playerName}} : {{markup_escape(title)}}\", \"alt\": \"{{status}}\", \"class\": \"{{status}}\"}' -F",
    "on-click": "hyprctl dispatch togglespecialworkspace",
    "on-click-right": "playerctl -i firefox play-pause",
    "on-scroll-up": "playerctl previous",
    "on-scroll-down": "playerctl next",
    "format-icons": {
      "Playing": "<span foreground='#E5B9C6'>Û∞íÆ Û∞êå Û∞í≠</span>",
      "Paused": "<span foreground='#928374'>Û∞íÆ Û∞è• Û∞í≠</span>"
    },
  },
  "battery": {
    "states": {
      "good": 95,
      "warning": 30,
      "critical": 15
    },
    "format": "{icon}  {capacity}%",
    "format-charging": "{capacity}% Ôóß",
    "format-plugged": "{capacity}% Ôá¶",
    "format-alt": "{icon} {time}",
    // "format-good": "", // An empty format will hide the module
    // "format-full": "",
    "format-icons": [
      "ÔâÑ",
      "ÔâÉ",
      "ÔâÇ",
      "ÔâÅ",
      "ÔâÄ"
    ]
  },
  "memory": {
    "format": "Û∞çõ {}%",
    "format-alt": "Û∞çõ {used}/{total} GiB",
    "interval": 5
  },
  "cpu": {
    "format": "Û∞ª† {usage}%",
    "format-alt": "Û∞ª† {avg_frequency} GHz",
    "interval": 5
  },
  "disk": {
    "format": "Û∞ãä {}%",
    "format-alt": "Û∞ãä {used}/{total} GiB",
    "interval": 5,
    "path": "/"
  },
  "network": {
    "format-wifi": "Û∞§®",
    "format-ethernet": "Ôõø {ifname}: Aesthetic",
    "format-linked": "Ôõø {ifname} (No IP)",
    "format-disconnected": "Û∞§≠",
    "format-alt": "Ôõø {ifname}: {ipaddr}/{cidr}",
    "tooltip-format": "{essid}",
    "on-click-right": "nm-connection-editor"
  },
  "group/hardware": {
    "orientation": "horizontal",
    "modules": [
      "network",
      "cpu",
      "memory",
      "disk",
      "battery"
    ],
    "drawer": {
      "transition-duration": 500,
      "transition-left-to-right": true
    }
	},
  "tray": {
    "icon-size": 16,
    "spacing": 8,
    "reverse-direction": true
  },
  "backlight": {
    // "device": "acpi_video1",
    "format": "{icon} {percent}%",
    "format-icons": [
      "Óéç",
      "Óèì",
      "Óèë",
      "Óèè",
      "Óèé",
      "Óèç",
      "Óèä",
      "Óèà",
      "Óéõ"
    ],
    //	"on-scroll-up":,
    //	"on-scroll-down":,
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Û∞ùü --%",
    "format-icons": {
      "default": [
        "Û∞ïø",
        "Û∞ñÄ",
        "Û∞ïæ"
      ]
    },
    "on-click": "pulsemixer --toggle-mute",
    "on-click-right": "alacritty --class pulsemixer -e pulsemixer",
    "on-scroll-up": "pulsemixer --change-volume +1",
    "on-scroll-down": "pulsemixer --change-volume -1",
    "scroll-step": 5
  },
  "custom/launcher": {
    //"format": "Û∞à∏",
    "format": "Ôåì ",
